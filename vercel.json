{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/v1/generate/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/payment/**/*.ts": {
      "maxDuration": 30
    },
    "src/app/api/storage/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup-anonymous",
      "schedule": "0 3 * * *"
    }
  ]
}
